    <persistence-unit name="default">
        <!-- Clases -->
        <class>ej62.clases.Localizaciones</class>
        <class>ej62.clases.Departamentos</class>
        <class>ej62.clases.Empleados</class>

        <properties>
            <!-- Propiedades GENERALES de conexión -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Propiedades ESPECÍFICAS de conexión -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/aprendizaje?currentSchema=empleados"/>
            <property name="jakarta.persistence.jdbc.user" value="alumno"/>
            <property name="jakarta.persistence.jdbc.password" value="alumno"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.sql-load-script-source" value="true"/>
        </properties>
    </persistence-unit>

